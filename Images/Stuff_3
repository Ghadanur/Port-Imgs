                             initial={{ opacity: 0, y: 50 }}
                             whileInView={{ opacity: 1, y: 0 }}
                             viewport={{ once: true, amount: 0.3 }}
                             transition={{ duration: 0.6, delay: 0.3 }}
                        >
                          <div className="contact-card">
                              <div className="contact-icon">üíª</div>
